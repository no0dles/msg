{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../../dist/validator",
    "lib": ["es2015"],
    "paths": {
      "@msg/core": ["../../dist/core"],
      "@msg/message": ["../../dist/message"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules/**"
  ]
}
